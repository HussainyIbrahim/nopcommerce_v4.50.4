@using Nop.Web.Areas.Admin.Models.Product


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model ProductErrorSearchModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.TroubleShooting.ProductErrors").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("TroubleShootingProducts");
}
<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.TroubleShooting.ProductErrors")
        <small>
            <i class="fas fa-arrow-circle-left"></i>
            <a asp-action="List">@T("Admin.TroubleShooting.ProductErrors.BackToProductList")</a>
        </small>
    </h1>
    <div class="float-right">
        <a asp-action="CreateProductError" asp-route-id="@Model.ProductId" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        @await Html.PartialAsync("Table", new DataTablesModel
                        {
                            Name = "languages-grid",
                            RowIdBasedOnField = nameof(ProductErrorModel.ErrorName),
                            UrlRead = new DataUrl("ProductErrorList", "TroubleShootingProduct", new RouteValueDictionary { ["productId"] = Model.ProductId }),
                            Length = Model.PageSize,
                            LengthMenu = Model.AvailablePageSizes,
                            ColumnCollection = new List<ColumnProperty>
                            {
                                new ColumnProperty(nameof(ProductErrorModel.ErrorName))
                                {
                                    Title = T("Admin.TroubleShooting.ProductErrors.Fields.ErrorName").Text
                                },
                                new ColumnProperty(nameof(ProductErrorModel.Description))
                                {
                                    Title = T("Admin.TroubleShooting.ProductErrors.Fields.Description").Text
                                },
                                new ColumnProperty(nameof(ProductErrorModel.Id))
                                {
                                    Title = T("Admin.Common.Edit").Text,
                                    Width = "100",
                                    ClassName =  NopColumnClassDefaults.Button,
                                    Render = new RenderButtonEdit(new DataUrl("~/Admin/TroubleShootingProduct/EditProductError/"))
                                }
                            }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>